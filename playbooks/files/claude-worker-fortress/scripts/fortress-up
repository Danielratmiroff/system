#!/bin/bash
# =============================================================================
# fortress-up - Start Claude Fortress devcontainer for a project
# =============================================================================
# Usage: fortress-up [workspace-folder]
#
# Starts the devcontainer for the specified workspace using the
# @devcontainers/cli. Requires .devcontainer/ to exist in the project.
# =============================================================================

set -euo pipefail

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m'

log_info() { echo -e "${BLUE}[INFO]${NC} $1"; }
log_success() { echo -e "${GREEN}[SUCCESS]${NC} $1"; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }
log_warn() { echo -e "${YELLOW}[WARN]${NC} $1"; }

# Configuration
WORKSPACE="${1:-.}"
WORKSPACE=$(realpath "$WORKSPACE" 2>/dev/null || echo "$WORKSPACE")

# Validate devcontainer CLI is installed
if ! command -v devcontainer &>/dev/null; then
    log_error "devcontainer CLI not found"
    log_info "Install with: npm install -g @devcontainers/cli"
    exit 1
fi

# Validate .devcontainer exists
if [[ ! -d "$WORKSPACE/.devcontainer" ]]; then
    log_error "No .devcontainer found in $WORKSPACE"
    log_info "Initialize first with: fortress-init $WORKSPACE"
    exit 1
fi

# Ensure credential directories exist on host
log_info "Ensuring credential directories exist..."
mkdir -p "$HOME/.claude" "$HOME/.ssh" 2>/dev/null || true

# Start the devcontainer
echo ""
echo -e "${CYAN}============================================${NC}"
echo -e "${CYAN}Starting Claude Fortress${NC}"
echo -e "${CYAN}============================================${NC}"
echo ""

log_info "Workspace: $WORKSPACE"
log_info "Starting devcontainer..."
echo ""

devcontainer up --workspace-folder "$WORKSPACE"

# Success message
echo ""
echo -e "${GREEN}============================================${NC}"
echo -e "${GREEN}Claude Fortress is running!${NC}"
echo -e "${GREEN}============================================${NC}"
echo ""
echo "Access options:"
echo "  Shell:       fortress-exec bash"
echo "  Claude:      fortress-exec claude --dangerously-skip-permissions"
echo "  Any command: fortress-exec <command> [args...]"
echo ""
echo "To stop:"
echo "  docker stop \$(docker ps -q --filter ancestor=vsc-*)"
